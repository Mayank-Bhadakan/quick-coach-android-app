<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background_screen"
    android:orientation="vertical"
    tools:context=".Activity.CoachInformationActivity"
    tools:ignore="ExtraText">

    <com.quickcoach.customs.CustomHeader
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/customHeader"
        android:layout_alignParentTop="true" />
    
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/customHeader">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorSubBackground">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rlTop"
            android:layout_marginTop="@dimen/_minus15sdp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bgCoach"
                android:src="@drawable/bg_coach_info" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:id="@+id/imgFavorite"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_heart_unfill_black"
                android:layout_marginTop="@dimen/_24sdp"
                android:layout_marginEnd="@dimen/_20sdp"/>
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/levelCoach"
                android:layout_centerInParent="true">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_120sdp"
                    android:id="@+id/imgCoach"
                    android:layout_centerInParent="true"
                    app:roundAsCircle="true" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:id="@+id/coachLevel"
                    android:layout_alignEnd="@+id/imgCoach"
                    android:layout_alignBottom="@id/imgCoach"
                    android:layout_marginEnd="@dimen/_minus5sdp"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:src="@drawable/ic_gold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/levelCoach">
                
                <com.google.android.material.button.MaterialButton
                   android:id="@+id/btnGetAdviceCoach"
                    style="@style/ButtonStyle_14px"
                    android:layout_marginHorizontal="@dimen/_100sdp"
                    android:text="@string/get_advice"
                    android:layout_marginTop="@dimen/_70sdp"
                    android:textStyle="bold"
                    android:visibility="visible"  />

            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rlTop"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cvCardView"
                android:layout_marginTop="@dimen/_minus4sdp"
                android:background="@color/colorWhite"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_8sdp" >
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/llCoachDetails"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_10sdp"
                android:visibility="visible" >
                
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/llDateRow"
                    android:layout_marginTop="@dimen/_15sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtName"
                        android:fontFamily="@font/yugothib"
                        android:text="@string/ken_kou_jaz"
                        android:textColor="#000000"
                        android:textSize="@dimen/_20sdp"
                        android:textStyle="bold"/>
                    
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_26sdp"
                        android:layout_height="@dimen/_26sdp"
                        android:id="@+id/imgLock"
                        android:src="@drawable/ic_lock_red"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:visibility="gone" />
                </RelativeLayout>
                
                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingBar"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_6sdp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:progressDrawable="@drawable/dr_big_rating_star"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rvSportsList" />
                <View
                    style="@style/HorizontalViewStyle"
                    android:layout_marginVertical="@dimen/_20sdp" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Text12BoldWhiteStyle"
                    android:text="@string/benefit_you_will_learn_from_this_coach"
                    android:textColor="#75393A3A"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtTechnique"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:fontFamily="@font/yugothib"
                    android:text=""
                    android:textColor="#99121212" />

                <View
                    style="@style/HorizontalViewStyle"
                    android:layout_marginVertical="@dimen/_5sdp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_10sdp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_winner" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/Text11RegularWhiteStyle"
                        android:layout_width="wrap_content"
                        android:text="@string/coach_experience"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtExperience"
                        android:textColor="#99121212"
                        android:textSize="@dimen/_11sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_winner" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        style="@style/Text11RegularWhiteStyle"
                        android:text="@string/coach_school_name"
                        android:textStyle="bold" />
                    
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtSchoolName"
                        android:textColor="#99121212"
                        android:textSize="@dimen/_11sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/ic_winner" />

                    <androidx.appcompat.widget.AppCompatTextView

                        style="@style/Text11RegularWhiteStyle"
                        android:layout_width="wrap_content"
                        android:singleLine="false"
                        android:text="@string/number_of_players_adviced_"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/advise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#99121212"
                        android:textSize="@dimen/_11sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/ic_winner" />
                    
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        style="@style/Text11RegularWhiteStyle"
                        android:singleLine="false"
                        android:text="@string/reported_by_player"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/reportByPlayer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#99121212"
                        android:textSize="@dimen/_11sdp" />

                </LinearLayout>

                    <View
                       style="@style/HorizontalViewStyle"
                        android:layout_marginVertical="@dimen/_5sdp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/Text12BoldWhiteStyle"
                            android:text="@string/available_time" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtTime"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:textColor="#99121212"
                            android:textSize="@dimen/_11sdp" />
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

    // check quick coach website to get your coach advice nathi lakhe km k apde khali app j banaveli chhce website nathi banaveli

</RelativeLayout>