<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background_screen"
    android:orientation="vertical"
    tools:context=".Activity.ProfileActivity">

    <com.quickcoach.customs.CustomHeader
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/customHeader"
        android:layout_alignParentTop="true" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/customHeader"
        android:layout_marginTop="-6dp"
        android:layout_marginBottom="19dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rlCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_30sdp"
                android:orientation= "vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:background="@android:color/transparent"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="@dimen/_8sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_60sdp"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txtLastName"
                            style="@style/Text8RegularGrayLableStyle"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_30sdp"
                            android:gravity="start"
                            android:text="@string/last_red"
                            android:textColor="@color/black" />

                        <androidx.appcompat.widget.AppCompatEditText
                           android:id="@+id/edtLastName"
                            style="@style/EditTextParentStyle"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:hint="@string/last_name"
                            android:textColorHint="@color/colorGrayText"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLength="50"
                            android:textStyle="bold"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txtFirstName"
                            style="@style/Text8RegularGrayLableStyle"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:gravity="start"
                            android:text="@string/first_red"
                            android:textColor="@color/black" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edtName"
                            style="@style/EditTextParentStyle"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:hint="@string/last_name"
                            android:textColorHint="@color/colorGrayText"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLength="50"
                            android:textStyle="bold"/>

                        <androidx.appcompat.widget.AppCompatTextView
                           android:id="@+id/txtEmail"
                            style="@style/Text8RegularGrayLableStyle"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:text="@string/email_star_red"
                            android:textColor="@color/black" />
                        
                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edtEmail"
                            style="@style/EditTextParentStyle"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:editable="false"
                            android:hint="@string/email"
                            android:textColorHint="@color/colorGrayText"
                            android:imeOptions="actionDone"
                            android:inputType="none"
                            android:maxLength="50"
                            android:textStyle="bold"
                            tools:ignore="Deprecated" />
                        
                        <androidx.appcompat.widget.AppCompatTextView
                           android:id="@+id/txtPrimaryLanguage"
                            style="@style/Text8RegularGrayLableStyle"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:text="@string/primary_language_star_red"
                            android:textColor="@color/black" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:background="@drawable/dr_edit_text_bg">

                            <androidx.appcompat.widget.AppCompatSpinner
                                android:id="@+id/spLanguage"
                                style="@style/SpinnerBGStyle"
                                android:layout_height="@dimen/_45sdp"
                                android:paddingEnd="@dimen/_5sdp" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_13sdp"
                                android:layout_height="@dimen/_13sdp"
                                android:layout_alignParentTop="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/_8sdp"
                                android:background="@color/colorSubBackground"
                                android:padding="@dimen/_1sdp"
                                android:src="@drawable/ic_down_gray" />
                            
                        </RelativeLayout>
                        
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txtJerseyNo"
                            style="@style/Text8RegularGrayLableStyle"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:text="@string/jersey_no"
                            android:textColor="@color/black" />
                        
                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edtJerseyNo"
                            style="@style/EditTextParentStyle"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:hint="@string/jersey_no"
                            android:textColorHint="@color/colorGrayText"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLength="3"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>
                        
                        <androidx.appcompat.widget.AppCompatTextView
                           android:id="@+id/txtPosition"
                            style="@style/Text8RegularGrayLableStyle"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:text="@string/position"
                            android:textColor="@color/black" />
                        
                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edtPosition"
                            style="@style/EditTextParentStyle"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:hint="@string/position_name"
                            android:textColorHint="@color/colorGrayText"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLength="20"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/llInfoForCoach"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:orientation="vertical">
                            
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txtExpertise"
                                style="@style/Text8RegularGrayLableStyle"
                                android:text="@string/expertise_star"
                                android:textColor="@color/black"/>

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edtCoachDetails"
                                style="@style/EditTextParentStyle"
                                android:layout_height="@dimen/_100sdp"
                                android:gravity="start"
                                android:hint="@string/what_is_your_expertise"
                                android:singleLine="false"
                                android:textStyle="bold"
                                android:textColorHint="@color/colorGrayText"
                                />
                            
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txtSchoolName"
                                style="@style/Text8RegularGrayLableStyle"
                                android:text="@string/organizations_where_you_belong"
                                android:textColor="@color/black" />

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edtSchoolName"
                                style="@style/EditTextParentStyle"
                                android:hint="@string/organizations_where_you_belong"
                                android:textColorHint="@color/colorGrayText"
                                android:inputType="text"
                                android:maxLength="30"
                                android:textStyle="bold" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txtExperience"
                                style="@style/Text8RegularGrayLableStyle"
                                android:text="@string/experience_Years_as_a_coach_star_red"
                                android:textColor="@color/black" />

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edtCoachExperience"
                                style="@style/EditTextParentStyle"
                                android:hint="@string/experience_years_as_a_coach"
                                android:textColorHint="@color/colorGrayText"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:maxLength="2"
                                android:textStyle="bold" />
                            
                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edtTeamPlan"
                                style="@style/EditTextParentStyle"
                                android:hint="@string/team_plan_price"
                                android:textColorHint="@color/colorGrayText"
                                android:imeOptions="actionDone"
                                android:inputType="text"
                                android:maxLength="30"
                                android:textStyle="bold"
                                android:visibility="gone" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/btnTimings"
                                    style="@style/Text10RegularBlueStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_gravity="start"
                                    android:text="@string/edit_available_timings" />
                                
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/btnBankDetails"
                                    style="@style/Text10RegularBlueStyle"
                                    android:layout_width="match_parent"
                                    android:text="@string/edit_bank_details"
                                    android:gravity="end" />
                                
                            </LinearLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvCertificate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            
                        </LinearLayout>
                        
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSave"
                            style="@style/ButtonParentStyle"
                            android:layout_alignParentBottom = "true"
                            android:layout_centerHorizontal = "true"
                            android:layout_marginHorizontal="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_30sdp"
                            android:text="@string/save"
                            android:textStyle="bold" />
                        
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>
            
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/imgProfile"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_110sdp"
                android:layout_alignTop="@id/rlCardView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_minus30sdp"
                app:roundAsCircle="true"
                app:roundingBorderColor="@color/black"
                app:roundingBorderWidth="@dimen/_5sdp" />
            
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgProfileUpload"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignEnd="@id/imgProfile"
                android:layout_marginTop="@dimen/_90sdp"
                android:src="@drawable/ic_upload_image"
                android:visibility="gone" />

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>