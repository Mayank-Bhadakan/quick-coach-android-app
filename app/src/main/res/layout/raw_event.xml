<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvEvent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

<!--        Main View For Details-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:background="@color/colorSubBackground" >

        <LinearLayout
            android:id="@+id/llCoachDetails"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_120sdp"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_10sdp"
            android:visibility="visible">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtStatus"
                android:layout_height="wrap_content"
                style="@style/CapsuleRedBackground"
                android:layout_marginVertical="@dimen/_5sdp"
                android:text="@string/tag"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />
            
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtEventName"
                android:layout_width="wrap_content"
                style="@style/Text14BoldBlackStyle"
                android:layout_marginVertical="@dimen/_5sdp"
                android:text="@string/event_title"  />

            <LinearLayout
                android:id="@+id/llLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgLocation"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_location" />
                
                <androidx.appcompat.widget.AppCompatTextView
                  android:id="@+id/eventPlace"
                    style="@style/Text11RegularWhiteStyle"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black" />

            </LinearLayout>
            
            <RelativeLayout
                android:id="@+id/llDateRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgCalender"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentStart="true"
                    android:paddingVertical="@dimen/_3sdp"
                    android:src="@drawable/ic_calander" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtDate"
                    style="@style/Text10BoldBlackStyle"
                    android:layout_width="wrap_content"
                    android:text="@string/date"
                    android:fontFamily="@font/neue_haas_display_medium"
                    android:layout_toEndOf="@id/imgCalender"  />

            </RelativeLayout>
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnApplyEvent"
                style="@style/ButtonStyle_16px"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginHorizontal="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text="@string/apply_this_event"
                android:visibility="visible" />

        </LinearLayout>

    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/rlMain"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp" >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imgIcon"
            android:layout_width="@dimen/_230sdp"
            android:layout_height="@dimen/_150sdp"
            app:placeholderImage="@drawable/ic_bg_detail"
            app:placeholderImageScaleType="fitXY"
            app:roundedCornerRadius="@dimen/_10sdp" />

    </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>