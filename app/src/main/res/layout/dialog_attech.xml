<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_10sdp"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:paddingBottom="@dimen/_15sdp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorBackground"
        app:cardCornerRadius="@dimen/_8sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Text10RegularWhiteStyle"
                android:id="@+id/txtTitleHeader"
                android:layout_alignParentTop = "true"
                android:gravity="center"
                android:paddingVertical="@dimen/_15sdp"
                android:text="@string/select_option"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_15sdp" />

            <View
                style="@style/HorizontalViewStyle"
                android:layout_marginVertical="@dimen/_5sdp" />
            
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtTakePhoto"
                style="@style/Text10RegularWhiteStyle"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:gravity="center"
                android:text="@string/take_a_new_photo"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/_15sdp" />

            <View
                style="@style/HorizontalViewStyle"
                android:layout_marginVertical="@dimen/_5sdp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtOpenImageGallery"
                style="@style/Text10RegularWhiteStyle"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:gravity="center"
                android:text="@string/choose_from_your_photo_library"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/_15sdp" />
            
            <View
                style="@style/HorizontalViewStyle"
                android:layout_marginVertical="@dimen/_5sdp" />
            
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtTakeVideo"
                style="@style/Text10RegularWhiteStyle"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:gravity="center"
                android:text="@string/record_video"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/_15sdp" />

            <View
                style="@style/HorizontalViewStyle"
                android:layout_marginVertical="@dimen/_5sdp" />
            
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtOpenVideoGallery"
                style="@style/Text10RegularWhiteStyle"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:gravity="center"
                android:text="@string/choose_from_your_video_library"
                android:textColor="@color/colorBlue"
                android:layout_marginBottom="@dimen/_8sdp"
                android:textSize="@dimen/_15sdp"  />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardBackgroundColor="@color/colorBackground">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtCancel"
            style="@style/Text10RegularWhiteStyle"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:paddingVertical="@dimen/_10sdp"
            android:text="@string/cancel"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/_15sdp"  />
        
    </androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>