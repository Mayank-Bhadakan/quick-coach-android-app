<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvNotification"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorCardBg"
    android:layout_marginBottom="@dimen/_8sdp"
    app:cardCornerRadius="@dimen/_8sdp"
    app:cardElevation="@dimen/_3sdp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="vertical" >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/daniel_atkins"
            android:fontFamily="@font/yugothib"
            android:singleLine="false"
            android:textColor="#121212"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imgNotificationProfile"
            android:layout_width="@dimen/_26sdp"
            android:layout_height="@dimen/_26sdp"
            app:roundAsCircle="true"
            app:placeholderImage="@drawable/ic_light_icon_notification"
            android:layout_alignParentEnd="true" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lorem_ipsum_is_simply_dummy_text_of_the_printing_and_typesetting_industry_lorem_ipsum_has_been_the_industry_standard"
            android:layout_below="@id/txtTitle"
            android:fontFamily="@font/yugothib"
            android:textSize="@dimen/_10sdp"
            android:singleLine="false" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtNotificationTIme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_9_hrs_ago"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/yugothib"
            android:layout_marginTop="@dimen/_14sdp"
            android:textSize="@dimen/_8sdp"
            android:layout_alignEnd="@id/imgNotificationProfile"
            android:layout_below="@id/imgNotificationProfile" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>