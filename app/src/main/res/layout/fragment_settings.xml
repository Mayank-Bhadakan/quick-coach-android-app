<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.SettingsFragment">

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/profileImg"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_110sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_20sdp"
                app:actualImageResource="@drawable/ic_dummy_profile"
                app:roundedCornerRadius="@dimen/_10sdp"
                app:roundAsCircle="true" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgEditProfile"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/ic_upload_image"
                android:layout_below="@id/profileImg"
                android:layout_alignEnd="@id/profileImg"
                android:layout_marginTop="@dimen/_minus35sdp"
                android:layout_marginRight="@dimen/_minus10sdp" />

        </RelativeLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtLblName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:layout_marginStart="@dimen/_80sdp"
                android:fontFamily="@font/yugothib"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />

            <RelativeLayout
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:background="@drawable/dr_edit_text_bg">

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_toStartOf="@id/edtName"
                    android:background="@null"
                    android:paddingStart="@dimen/_5sdp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/_10sdp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/edtName"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_edit_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_10sdp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlEditProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtPosition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:text="@string/position"
                    android:fontFamily="@font/yugothib"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp" />

                <RelativeLayout
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_below="@id/txtPosition"
                    android:background="@drawable/dr_edit_text_bg"
                    android:singleLine="true"
                    android:textSize="@dimen/_10sdp">
                    
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/txtEdtPosition"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_toStartOf="@id/edtPosition"
                        android:background="@null"
                        android:paddingStart="@dimen/_5sdp"
                        android:singleLine="true"
                        android:textStyle="bold"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/black" />
                    
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/edtPosition"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_edit_icon"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_10sdp" />
                    
                </RelativeLayout>
                
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtJerseyNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_35sdp"
                    android:text="@string/jersey_no"
                    android:fontFamily="@font/yugothib"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp" />

                <RelativeLayout
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_below="@id/txtJerseyNo"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/dr_edit_text_bg">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/txtEdtJerseyNo"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_toStartOf="@id/edtJerseyNo"
                        android:background="@null"
                        android:paddingStart="@dimen/_5sdp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/edtJerseyNo"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/ic_edit_icon"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_alignParentRight="true" />

                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:background="@drawable/dr_bg_white"
                android:orientation="horizontal"
                android:padding="@dimen/_4sdp" >

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_profile" />
                
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="@string/profile"
                    android:fontFamily="@font/yugothib"
                    android:gravity="start"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

            </LinearLayout>

        <LinearLayout
            android:id="@+id/llNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/dr_bg_white"
            android:orientation="horizontal"
            android:padding="@dimen/_4sdp" >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgNotification"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_26sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:src="@drawable/ic_notification"
                android:layout_gravity="center_vertical"  />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtTitleHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_5sdp"
                android:text="@string/notifications"
                android:layout_marginStart="@dimen/_10sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/yugothib"
                android:textStyle="bold"
                android:gravity="start"
                android:textSize="@dimen/_12sdp"  />

        </LinearLayout>
            
            <RelativeLayout
                android:id="@+id/llLocked"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_centerInParent = "true"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/dr_bg_white"
                android:orientation="horizontal"
                android:padding="@dimen/_4sdp"
                android:visibility="visible" >

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgLockProfile"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:src="@drawable/ic_lock_profile"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_4sdp"  />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lock_profile"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_toEndOf="@id/imgLockProfile"
                    android:fontFamily="@font/yugothib"
                    android:gravity="start"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"  />
                
                <ToggleButton
                    android:id="@+id/tgLockProfile"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:layout_alignParentEnd="true"
                    android:background="@null"
                    android:button="@drawable/dr_toggle_button"
                    android:checked="true"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />

            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/llLanguage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/dr_bg_white"
                android:orientation="horizontal"
                android:padding="@dimen/_4sdp"
                android:visibility="visible" >

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgLanguage"
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/ic_language"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_4sdp"  />
                
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:layout_toEndOf="@id/imgLanguage"
                    android:text="@string/change_language"
                    android:gravity="start"
                    android:fontFamily="@font/yugothib"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"  />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/llShareApp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/dr_bg_white"
                android:orientation="horizontal"
                android:padding="@dimen/_4sdp"
                android:visibility="visible" >
                
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgShareApp"
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:src="@drawable/ic_share_app"
                    android:layout_centerVertical="true" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:text="@string/share_app"
                    android:layout_toEndOf="@id/imgShareApp"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:fontFamily="@font/yugothib"
                    android:gravity="start"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />
                
            </RelativeLayout>
            
            <LinearLayout
                android:id="@+id/llLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/dr_bg_white"
                android:orientation="horizontal"
                android:padding="@dimen/_4sdp" >

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgLock"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:src="@drawable/ic_logout"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_4sdp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/logout"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:fontFamily="@font/yugothib"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black" />

            </LinearLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>