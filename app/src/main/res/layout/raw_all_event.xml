<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvEvent"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_10sdp">

    <RelativeLayout
        android:id="@+id/rlMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp" >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imgIcon"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp"
            app:actualImageResource="@drawable/ic_bg_detail"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_5sdp"
            app:placeholderImage="@drawable/ic_bg_detail"
            app:placeholderImageScaleType="fitXY"
            app:roundTopEnd="true"
            app:roundTopStart="true"
            app:roundedCornerRadius="@dimen/_8sdp" />
        
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtStatus"
            style="@style/CapsuleRedBackground"
            android:layout_marginVertical="@dimen/_5sdp"
            android:text="@string/tag"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold" />
        
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtEventName"
            style="@style/Text14BoldWhiteStyle"
            android:layout_width="match_parent"
            android:text="@string/event_title"
            android:layout_below="@id/txtStatus"
            android:layout_marginVertical="@dimen/_5sdp"
            android:textStyle="bold"
            android:layout_toStartOf="@id/imgIcon" />

        <LinearLayout
            android:id="@+id/llLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtEventName"
            android:layout_toStartOf="@id/imgIcon"
            android:orientation="horizontal">
            
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgLocation"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_location" />
            
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/eventPlace"
                style="@style/Text11RegularWhiteStyle"
                android:layout_width="wrap_content"
                android:textColor="@color/black" />
            
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/llDateRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/llLocation" >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgCalender"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_calander"
                android:paddingVertical="@dimen/_3sdp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtDate"
                style="@style/Text10BoldWhiteStyle"
                android:layout_width="wrap_content"
                android:layout_toEndOf="@id/imgCalender"
                android:layout_marginStart="@dimen/_2sdp"
                android:fontFamily="@font/neue_haas_display_medium"
                android:paddingVertical="@dimen/_4sdp"
                android:text="@string/date"
                android:textSize="@dimen/_10sdp" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>